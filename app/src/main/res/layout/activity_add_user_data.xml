    <EditText
        android:id="@+id/add_user_data_username"
        android:layout_marginTop="200dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/add_user_data_reading"
        android:background="@drawable/up"
        android:ems="10"
        android:hint="Enter username"
        android:textColorHint="@android:color/white"
        android:padding="5dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/add_user_data_reading"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/add_user_data_username"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter water meter reading"
        android:textColorHint="@android:color/white"
        android:background="@drawable/down"
        android:padding="5dp"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/add_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:background="@drawable/button_round"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Add" />

    <Spinner
        android:id="@+id/add_user_data_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_user_data_reading"
        android:layout_alignRight="@+id/add_user_data_reading"
        android:layout_below="@+id/add_user_data_reading"
