    <Spinner
        android:id="@+id/add_user_data_year"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_user_data_month"
        android:layout_alignStart="@+id/add_user_data_month"
        android:layout_below="@+id/add_user_data_month" />

    <TextView
